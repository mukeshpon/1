<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#16395B"
    tools:context="com.example.android.play.TeacherLogin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/splash"
                android:layout_marginStart="110dp"
                android:id="@+id/imageView"
                android:layout_weight="0.14" />

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#F5F5FA"
        android:text=" Teacher Login"
        android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tusername"
            android:drawableStart="@drawable/ic_user_name"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#ffff"
            android:drawableTint="#AAAAB8"
            android:textColorHint="#ffff"
            android:fontFamily="sans-serif-thin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="3dp"
            android:id="@+id/tpassword"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:hint="Password"
            android:drawableTint="#AAAAB8"
            android:textColorHint="#ffff"
            android:textColor="#ffff"
            android:fontFamily="sans-serif-thin"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:text="LOG IN"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/tlog_in"
            android:textScaleX="1.2"
            android:textSize="15dp"
            android:background="@drawable/shape"
            android:layout_marginBottom="50dp"/>


<TextView
    android:layout_width="match_parent"
    android:id="@+id/tsignup1"
    android:layout_height="wrap_content"
    android:text="@string/signuphere"
    android:textAlignment="center"
    android:textColor="#DB8C0A"
    android:textSize="14dp"
    android:textStyle="italic|bold"/>
    </LinearLayout>



